<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingHorizontal="@dimen/dp_40">

        <ImageView
            android:id="@+id/ivTutorial"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/dp_50"
            android:contentDescription="@string/todo"
            android:src="@drawable/tutorial_1"
            app:layout_constraintBottom_toTopOf="@+id/tvTutorialHeader"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed" />

        <TextView
            android:id="@+id/tvTutorialHeader"
            style="@style/TextViewStyleLight"
            android:gravity="center"
            android:textSize="@dimen/sp_26"
            app:layout_constraintBottom_toTopOf="@+id/tvTutorialDesc"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ivTutorial" />

        <TextView
            android:id="@+id/tvTutorialDesc"
            style="@style/TextViewStyleLight"
            android:layout_marginTop="@dimen/dp_20"
            android:gravity="center"
            android:textColor="@color/secondary_text_color"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvTutorialHeader" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>