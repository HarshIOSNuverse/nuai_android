<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Nuai" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/black</item>
        <item name="colorSecondaryVariant">@color/black</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>

        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Nuai.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Dark" />

    <style name="TextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/primary_text_color</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/sp_17</item>
    </style>

    <style name="TextViewStyleLight" parent="TextStyle">
        <item name="android:fontFamily">@font/switzer_light</item>
    </style>

    <style name="TextViewStyleRegular" parent="TextStyle">
        <item name="android:fontFamily">@font/switzer_regular</item>
    </style>

    <style name="TextViewStyleMedium" parent="TextStyle">
        <item name="android:fontFamily">@font/switzer_medium</item>
    </style>

    <style name="TextViewStyleSemiBold" parent="TextStyle">
        <item name="android:fontFamily">@font/switzer_semibold</item>
    </style>


    <style name="TextViewStyleBold" parent="TextStyle">
        <item name="android:fontFamily">@font/switzer_bold</item>
    </style>

    <style name="EditTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_45</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/et_text_color</item>
        <item name="android:textColorHint">@color/et_hint_color</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/switzer_regular</item>
        <item name="android:textSize">@dimen/sp_18</item>
    </style>

    <style name="DatePickerStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/theme_color</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_45</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/switzer_regular</item>
        <item name="android:textSize">@dimen/sp_20</item>
        <item name="background">@drawable/rc_black_filled_c25</item>
    </style>

    <style name="MonthText">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/sp_17</item>
        <item name="fontFamily">@font/switzer_light</item>
    </style>

    <style name="WeekDayText">
        <item name="android:textColor">@color/primary_text_color</item>
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="fontFamily">@font/switzer_light</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="DateText" parent="TextAppearance.MaterialCalendarWidget.Date">
        <item name="android:textSize">@dimen/sp_17</item>
        <item name="fontFamily">@font/switzer_light</item>
        <item name="android:textColor">@color/primary_text_color</item>
    </style>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/secondary_text_color</item>
        <item name="colorControlActivated">#ff9900</item>
    </style>

    <style name="AppBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/white_top_rounded_bg</item>
    </style>

</resources>